<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/LL3_address"
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"

        android:gravity="center"

        android:background="#D5DBDB">

        <TextView
            android:id="@+id/TV_receiver_name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right|center"


            android:paddingRight="10dp"

            android:text="نام و نام خانوادگی گیرنده"
            android:textSize="20dp"
            android:textStyle="bold"/>
        
        <ImageView
            android:id="@+id/BTN_delete_address"

            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginLeft="15dp"

            android:layout_alignParentLeft="true"

            android:background="@drawable/ic_delete_forever_black_24dp"/>
        
    </RelativeLayout>
    
    <View
        android:id="@+id/v1_address"
        android:layout_below="@+id/LL3_address"
                
        android:layout_width="match_parent"
        android:layout_height="1dp"
                
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/LL1_address"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"

        android:layout_below="@+id/v1_address"

        android:minHeight="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/TV_receiver_phone_number"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"

            android:paddingRight="10dp"

            android:text="09** *******"
            android:textSize="18dp"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right|center"

            android:layout_margin="5dp"
            android:paddingRight="10dp"

            android:backgroundTint="@color/green"

            android:inputType="phone"
            android:text="شماره تلفن همراه گیرنده"
            android:textSize="15dp"
            android:textStyle="bold"/>


    </LinearLayout>

            <LinearLayout
                android:id="@+id/LL2_address"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:weightSum="4"

                android:layout_below="@+id/LL1_address"
                android:gravity="center">

                <TextView
                    android:id="@+id/TV_receiver_city"

                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:gravity="right|center"

                    android:layout_margin="5dp"
                    android:paddingRight="10dp"

                    android:text="****"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:gravity="right|center"

                    android:layout_margin="5dp"
                    android:paddingRight="10dp"

                    android:text="شهر"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/TV_receiver_state"

                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:gravity="right|center"

                    android:layout_margin="5dp"
                    android:paddingRight="10dp"

                    android:text="****"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:gravity="right|center"

                    android:layout_margin="5dp"
                    android:paddingRight="10dp"

                    android:text="استان"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

            </LinearLayout>

    <LinearLayout
        android:id="@+id/LL4_address"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"

        android:layout_below="@+id/LL2_address"

        android:minHeight="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/TV_receiver_post_number"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"

            android:paddingRight="10dp"

            android:text="********"
            android:textSize="15dp"/>

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"

            android:layout_margin="5dp"
            android:paddingRight="10dp"

            android:text="کد پستی"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL5_address"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"

        android:layout_below="@+id/LL4_address"

        android:minHeight="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/TV_receiver_post_address"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/LL4_address"

            android:gravity="right"

            android:layout_margin="5dp"
            android:paddingRight="10dp"

            android:text="**********************"
            android:textSize="15dp"/>

            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/LL4_address"

                android:gravity="right"

                android:layout_margin="5dp"
                android:paddingRight="10dp"

                android:text="نشانی پستی"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>